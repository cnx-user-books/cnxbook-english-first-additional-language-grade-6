    <section id="id1169670950260">
      <title>[LO 4.3.1]</title>
      <para id="id7350204">
        <figure id="id7941194">
          <media id="id7941194_media" alt="">
            <image mime-type="image/png" src="../../media/Picture 1-e3de.png" id="id7941194__onlineimage" height="482" width="565"/>
          </media>
